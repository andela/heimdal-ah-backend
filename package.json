{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run db:undo:migrate && npm run db:migrate:test && npm run db:seed:test",
    "test": "cross-env NODE_ENV=test nyc mocha ./test --require @babel/register --exit --timeout 250000",
    "posttest": "npm run db:undo:migrate",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "start:dev": "npm run db:undo:migrate && npm run db:migrate && npm run db:seed && nodemon index.js --exec babel-node -- ",
    "db:undo:migrate": "cross-env NODE_ENV=test node_modules/.bin/sequelize db:migrate:undo:all",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:migrate:test": "cross-env NODE_ENV=test node_modules/.bin/sequelize db:migrate",
    "db:seed": "node_modules/.bin/sequelize db:seed:all",
    "db:seed:test": "cross-env NODE_ENV=test node_modules/.bin/sequelize db:seed:all",
    "lint:fix": "eslint --fix ./ --ext .js --color",
    "start": "npm run clean && npm run build && node dist/index.js",
    "build": "npm run clean && babel . --ignore node_modules,test,coverage,dist -d dist/ && cp swagger.json dist/",
    "prestart": "npm run build",
    "clean": "rimraf ./build"
  },
  "nyc": {
    "exclude": [
      "build",
      "models"
    ]
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "*",
    "@babel/runtime": "^7.2.0",
    "@sendgrid/mail": "^6.3.1",
    "bcrypt": "^3.0.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "chance": "^1.0.16",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "email-validator": "^2.0.4",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.0",
    "install": "^0.12.2",
    "jsonwebtoken": "^8.4.0",
    "jwt-decode": "^2.2.0",
    "logger": "0.0.1",
    "morgan": "^1.9.1",
    "npm": "^6.4.1",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.7.1",
    "pg-hstore": "^2.3.2",
    "rimraf": "^2.6.2",
    "sequelize": "^4.41.2",
    "sequelize-cli": "^5.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.7",
    "nyc": "^13.1.0"
  }
}
